    override func viewDidAppear(_ animated: Bool) {
        super.viewDidAppear(animated)
        self.session?.startRunning()
        if self.tipsBackViewWidth.constant > 30 {
            DispatchQueue.main.asyncAfter(deadline: DispatchTime.now() + 1) {
